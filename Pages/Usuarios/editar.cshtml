@page
@model DotNetBasics.Pages.Usuarios.editarModel
@{
}

<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
          <div class="card-img-left d-none d-md-flex">
            <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body p-4 p-sm-5 bg-dark text-light">
            <h5 class="card-title text-center mb-5 fw-light fs-5">Register</h5>
            <form asp-page="/Usuarios/editar" method="post" data-ajax="true" data-ajax-method="post" 
                data-ajax-success="Sucesso" data-ajax-failure="Falha">
              <input type="hidden" asp-for="Id" />
              <div class="form-floating mb-3 text-black">
                <input asp-for="Nome" type="text" class="form-control" placeholder="myusername" required autofocus>
                <label asp-for="Nome" >Nome</label>
              </div>

              <div class="form-floating mb-3 text-black">
                <input asp-for="Usuario" type="text" class="form-control" placeholder="name@example.com">
                <label asp-for="Usuario">Usuario</label>
              </div>
              <div class="d-grid mb-2">
                <button class="btn btn-lg btn-primary btn-login fw-bold text-uppercase" type="submit">Salvar</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<style>
    .card-img-left {
  width: 45%;
  /* Link to your background image using in the property below! */
  background: scroll center url('https://www.collinsdictionary.com/images/full/galaxy_364586081.jpg');
  background-size: cover;
}
</style>